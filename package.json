{
  "name": "postwoman-cli",
  "version": "0.0.1",
  "description": "CLI solution for Postwoman.",
  "main": "index.js",
  "bin": {
    "pw-cli": "index.js"
  },
  "scripts": {
    "lint": "prettier-standard index.js test/index.js src/{*,/**/*}.js",
    "test": "ava test/index.js",
    "test:watch": "ava test/index.js --watch --verbose"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint"
  },
  "keywords": [
    "cli",
    "node.js",
    "javascript"
  ],
  "author": "James George <jamesgeorge998001@gmail.com>",
  "dependencies": {
    "fs-extra": "^8.1.0",
    "node-banner": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "ava": "^2.4.0",
    "execa": "^3.4.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier-standard": "^16.1.0"
  }
}
